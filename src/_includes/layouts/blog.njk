---
layout: base.njk
---
<article class="max-w-4xl mx-auto px-4 py-8 animate-fade-in-up">
  <!-- Header -->
  <header class="mb-8">
    {% if tags %}
    <div class="flex gap-2 flex-wrap mb-4">
      {% for tag in tags %}
        <span class="badge">{{ tag }}</span>
      {% endfor %}
    </div>
    {% endif %}
    
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight text-bleu-950 mb-4">
      {{ title }}
    </h1>
    
    <div class="flex flex-wrap items-center gap-4 text-bleu-700">
      <a href="https://github.com/{{ authorGithub }}" target="_blank" rel="noopener" class="flex items-center gap-2 hover:text-bleu-900">
        <img 
          src="https://github.com/{{ authorGithub }}.png?size=80" 
          alt="{{ author }}" 
          class="w-10 h-10 rounded-full border-2 border-bleu-200"
          loading="lazy"
        >
        <span class="font-semibold">{{ author }}</span>
      </a>
      <span class="text-bleu-300">•</span>
      <time datetime="{{ date | dateFormat }}">{{ date | dateFormat }}</time>
      <span class="text-bleu-300">•</span>
      <span>{{ content | readingTime }} min read</span>
    </div>
  </header>
  
  <!-- Thumbnail -->
  {% if thumbnail %}
  <div class="mb-8 rounded-lg overflow-hidden">
    <img 
      src="{{ thumbnail }}" 
      alt="{{ title }}" 
      class="w-full max-h-[500px] object-cover"
      loading="lazy"
    >
  </div>
  {% endif %}
  
  <!-- Content -->
  <div class="prose">
    {{ content | safe }}
  </div>
  
  <!-- Share / Edit -->
  <div class="flex flex-wrap items-center justify-between border-t border-bleu-200 mt-12 pt-8 gap-4">
    <a 
      href="https://github.com/{{ site.repo }}/edit/main/content/blogs/{{ page.fileSlug }}.md"
      target="_blank"
      rel="noopener"
      class="btn btn-secondary text-sm"
    >
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Edit on GitHub
    </a>
    
    <div class="flex gap-3">
      <a 
        href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ site.url }}{{ page.url | urlencode }}"
        target="_blank"
        rel="noopener"
        class="btn btn-secondary text-sm"
        aria-label="Share on Twitter"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
      </a>
      <a 
        href="https://www.linkedin.com/sharing/share-offsite/?url={{ site.url }}{{ page.url | urlencode }}"
        target="_blank"
        rel="noopener"
        class="btn btn-secondary text-sm"
        aria-label="Share on LinkedIn"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
    </div>
  </div>
  
  <!-- Comments -->
  <section class="mt-12">
    {% include "components/giscus.njk" %}
  </section>
</article>
