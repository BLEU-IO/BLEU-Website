<div class="giscus-wrapper">
  <h2 class="text-2xl font-bold text-bleu-950 mb-6">Comments</h2>
  <p class="text-bleu-700 text-sm mb-4">
    Comments are powered by <a href="https://giscus.app" target="_blank" rel="noopener">giscus</a> and stored in GitHub Discussions.
  </p>
  <script 
    src="https://giscus.app/client.js"
    data-repo="{{ site.repo }}"
    data-repo-id="REPLACE_WITH_REPO_ID"
    data-category="Blog Comments"
    data-category-id="REPLACE_WITH_CATEGORY_ID"
    data-mapping="pathname"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme="light"
    data-lang="en"
    data-loading="lazy"
    crossorigin="anonymous"
    async>
  </script>
</div>
